package exam_class;

public class PlaneTest {
	public static void main(String[] args) {
		//디폴트 생성자
		Plane plane1 = new Plane();
		
		//생성자
		Plane plane2 = new Plane("BOEING","B737",0);
		
		//getter, setter
		String s1, s2;
		int n1;
		
		Plane plane3 = new Plane();
		plane3.setProductComp("BOMBARDIER");
		s1 = plane3.getProductComp();
		
		plane3.setModel("CS300");
		s2 = plane3.getModel();
		
		plane3.setPersonNum(150);
		n1 = plane3.getPersonNUm();
		
		System.out.println(plane1.toString());
		System.out.println(plane2.toString());
		System.out.printf("항공정보[제작사 : %s\t, 모델 : %s\t, 최대 승객수 : %3d]", s1, s2, n1);
	}
}
