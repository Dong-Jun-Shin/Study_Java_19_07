package simplephoneinfo;

import java.util.Scanner;

class PhoneBookManager{
	private PhoneInfo user;
	
	public void insertData(Scanner scan) {
		System.out.print("이름 : ");
		user.getName() = scan.nextLine();

		System.out.print("전화번호 : ");
		user.phoneNumber = scan.nextLine();

		System.out.print("생년월일 : ");
		user.birthday = scan.nextLine();
		//생일을 받지 않을 경우를 정의
		if (user.birthday.equals(""))
			user.birthday = null;

		System.out.println("\n입력된 정보 출력...");
		showPhoneInfo();
	}
	
	public static void selectData() {
		
	}
	
	public static void deleteData() {
		
	}
}

