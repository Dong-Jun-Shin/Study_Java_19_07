package exam_class;

import java.util.Scanner;

public class BankApplication {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		Account[] person = new Account[1];
		for (int i = 0; i < person.length; i++) {
			person[i] = new Account();
		}
		
		Account[] temp = new Account[person.length+1];
		for (int i = 0; i < temp.length; i++) {
			temp[i] = new Account();
		}
		for (int i = 0; i < temp.length; i++) {
			temp[i] = person[i];
		}

		Account.showFrame();
		int selNum = scan.nextInt();
		
		switch(selNum) {
		case 1:
			person[0].createAccount(scan);
			break;
		case 2:
			person[0].accountList(person);
			break;
		case 3:
			person[0].deposit(scan);
			break;
		case 4:
			person[0].withdraw(scan);
			break;
		case 5:
			System.out.println("프로그램 종료");
			scan.close();
			return;
		}
	}
}
